---
import SectLight from "../layouts/Sect_Light.astro";
import Card from "../components/Card.astro";
// Ruta de las imagenes:
import laptopDesign from "/src/img/Laptop.svg";
import Palindrome from "/src/img/p1_palindrome_checker.png";
import Convertidor from "/src/img/ct.png";
import Login from "/src/img/login1.svg";
---

<SectLight>
  <h1 class="text-4xl text-center my-16">Algunos de mis proyectos finalizados...</h1>
  <div class="grid place-items-center md:grid-cols-2 lg:grid-cols-3 gap-10 flex-wrap">
    <Card
      ruta={Palindrome}
      tituloProyecto={"Palindrome Checker"}
      tagsProyecto={"Pequeña app web que sirve para comprobar si una palabra o frase es o no un palíndromo."}
      enlace={"https://palindromechecker-frey.netlify.app/"}
    />
    <Card
      ruta={Login}
      tituloProyecto={"Login Design"}
      tagsProyecto="Creé un diseño de un Login usando figma"
      enlace={"/src/img/login1.svg"}
    />
    <Card
      ruta={Convertidor}
      tituloProyecto={"Convert Tools"}
      tagsProyecto="una coleccion de herramientas para hacer conversiones en Física, ideal para estudiantes de bachiller o universitarios (actualmente está en beta)"
      enlace={"https://converttools.netlify.app/"}
    />
    <Card
      ruta={laptopDesign}
      tituloProyecto={"Laptop Design"}
      tagsProyecto="Este diseño vectorial lo hice utilizando Adobe Ilustrator"
      enlace={"/src/img/Laptop.svg"}
    />
    <Card ruta={laptopDesign} tituloProyecto={"Aqui falta un proyecto"} tagsProyecto="Aqui falta una descripcion" enlace={""} />
    <Card ruta={laptopDesign} tituloProyecto={"Aqui falta un proyecto"} tagsProyecto="Aqui falta una descripcion" enlace={""} />
  </div>

  <span class="text-center text-3xl mt-12">Te gusta lo que ves? </span>
  <span class="text-center text-3xl mb-12">
    <span class="text-4xl font-bold"> > </span>
    <span class="underline underline-offset-2 decoration-blue-900"><a href="/contactame/">Contáctame</a></span> y hagamos algo nuevo!
  </span>
</SectLight>
